{
  "name": "keycloak-ofbiz-spa-test",
  "version": "1.0.0",
  "description": "React SPA for testing Keycloak OFBiz realm authentication",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "keycloak-js": "^26.0.0",
