# Development Dockerfile for React SPA
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Set environment variables for React dev server
ENV DANGEROUSLY_DISABLE_HOST_CHECK=true
ENV HOST=0.0.0.0
ENV PORT=3000
ENV CHOKIDAR_USEPOLLING=true

# Expose port
EXPOSE 3000

# Start development server with Docker-specific configuration
CMD ["npm", "run", "start:docker"]
